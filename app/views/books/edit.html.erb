     <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
    <% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label>Title</label>
    <div class="input">
    <%= f.text_field :title %>
	  </div>
	</div>
	<div class="field">
    <label>Body</label>
    <div class="input">
      <%= f.text_area :body %>
    </div>  
	</div>
  
  <div class="update">
  <%= f.submit 'Update Book' %>
  </div>
  <a>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>
  </a>
  
<% end %>
